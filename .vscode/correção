#include <stdio.h>

struct carta{
char estado[10];
char codigo[20];
char NomedaCidade[20];
int Populacao;
float Area;
float PIB;
int NumeroPontosTuristicos;
float DensidadePopulacional;
float PIBperCapita;
};

int main(){

  struct carta carta1;
  struct carta carta2;


("\n-------------------------------\n");
printf("_____CADASTRO DE CARTAS SUPER TRUNFO_____\n");


//CARTA 1

printf("\nCarta1:\n");
printf("Informe o Estado (ex: Rj):");
scanf(" %s",carta1.estado);

printf("Informe o código(ex:A01):");
scanf(" %s",carta1.codigo);

printf("Informe o Nome da Cidade:");
scanf(" %[^\n]",carta1.NomedaCidade);

printf("Informe o Número de Habitantes (População):");
scanf(" %d",&carta1.Populacao);

printf("Informe o Número de Área (km²):");
scanf(" %f%*s",&carta1.Area);

printf("Informe a PIB (bilhões de reais):");
scanf(" %f%*s",&carta1.PIB);

printf("Informe o Número de Pontos Turísticos:");
scanf(" %d",&carta1.NumeroPontosTuristicos);

//cálculo (Densidade Populacional / PIBperCapita)

carta1.DensidadePopulacional = carta1.Populacao / carta1.Area;
carta1.PIBperCapita = carta1.PIB / carta1.Populacao;

//CARTA2

printf("\nCarta 2:\n");
printf("Informe o Estado (ex: Rj):");
scanf(" %s",carta2.estado);

printf("Informe o codigo(ex:A01):");
scanf(" %s",carta2.codigo);

printf("Informe o Nome da Cidade:");
scanf(" %[^\n]",carta2.NomedaCidade);

printf("Informe o Número de Habitantes (População):");
scanf(" %d",&carta2.Populacao);

printf("Informe o Número de Área (km²):");
scanf("%f%*s",&carta2.Area);

printf("Informe a PIB (bilhões de reais):");
scanf(" %f%*s",&carta2.PIB);

printf("Informe o Número de Pontos Turísticos: ");
scanf(" %d",&carta2.NumeroPontosTuristicos);

//cálculo (Densidade Populacional / PIBperCapita)

carta2.DensidadePopulacional = carta2.Populacao / carta2.Area;
carta2.PIBperCapita = carta2.PIB / carta2.Populacao;

printf("\n----------------------------\n");
printf("Informações de Cartas Cadastradas");

//EXIBIÇÃO DO RESULTADO

//CARTA 1
printf("\nCarta1:\n");
printf("Estado: %s\n", carta1.estado);
printf("Código: %s\n", carta1.codigo);
printf("Nome da Cidade: %s\n", carta1.NomedaCidade);
printf("Número de Habitantes: %d\n", carta1.Populacao);
printf("Número de Área: %.2f\n", carta1.Area);
printf("PIB: %.2f\n", carta1.PIB);
printf("Número de Pontos Turísticos: %d\n", carta1.NumeroPontosTuristicos);
printf("Densidade Populacional: %.2f\n", carta1.DensidadePopulacional);
printf("PIB per Capita: %f\n", carta1.PIBperCapita);



//CARTA 2

printf("\nCarta2:\n");
printf("Estado: %s\n", carta2.estado);
printf("Código: %s\n", carta2.codigo);
printf("Nome da Cidade: %s\n", carta2.NomedaCidade);
printf("Número de Habitantes: %d\n", carta2.Populacao);
printf("Número de Área: %f\n", carta2.Area);
printf("PIB: %.2f\n", carta2.PIB);
printf("Número de Pontos Turísticos: %d\n", carta2.NumeroPontosTuristicos);
printf("Densidade Populacional: %.2f\n", carta2.DensidadePopulacional);
printf("PIB per Capita: %f\n", carta2.PIBperCapita);


return 0;

}
